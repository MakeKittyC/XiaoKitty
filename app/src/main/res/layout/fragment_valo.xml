<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:id="@+id/androidx_ConstraintLayout"
     android:background="@color/task_item_background"
     android:backgroundTint="@color/com_app_s"
     tools:context="app.ui.valo.ValoFragment" >
<!-- viewbinding -->
     <TextView
        android:id="@+id/android_TextView"
        android:text="通知消息配置"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/android_TextView1" />
        
<!-- 配置文件对应 personName -->
    <com.google.android.material.textfield.TextInputLayout
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginBottom="3dp"
       android:id="@+id/android_TextView1"
       app:layout_constraintTop_toBottomOf="@+id/android_TextView"
       app:layout_constraintBottom_toTopOf="@+id/android_TextView2"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="设置通知消息用户名">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

<!-- 配置文件对应 title -->
    <com.google.android.material.textfield.TextInputLayout
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginBottom="3dp"
       android:id="@+id/android_TextView2"
       app:layout_constraintTop_toBottomOf="@+id/android_TextView1"
       app:layout_constraintBottom_toTopOf="@+id/android_TextView3"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="设置通知消息标题">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/title_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

<!-- 配置文件对应 conversationId -->
    <com.google.android.material.textfield.TextInputLayout
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginBottom="3dp"
       android:id="@+id/android_TextView3"
       app:layout_constraintTop_toBottomOf="@+id/android_TextView2"
       app:layout_constraintBottom_toTopOf="@+id/android_TextView4"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="设置通知消息会话ID[纯数字-32bit]">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/id_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginBottom="3dp"
       android:id="@+id/android_TextView4"
       app:layout_constraintTop_toBottomOf="@+id/android_TextView3"
       app:layout_constraintBottom_toTopOf="@+id/android_TextView5"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="设置通知消息时间戳[yyyy-MM-dd HH:mm:ss]">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/time_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

<!-- 配置文件对应 personNames -->
    <com.google.android.material.textfield.TextInputLayout
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginBottom="3dp"
       android:id="@+id/android_TextView5"
       app:layout_constraintTop_toBottomOf="@+id/android_TextView4"
       app:layout_constraintBottom_toTopOf="@+id/android_TextView7"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="设置回复通知消息用户名">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ida_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

<!-- 配置文件对应 titles -->
    <com.google.android.material.textfield.TextInputLayout
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="3dp"
       android:layout_marginBottom="3dp"
       android:id="@+id/android_TextView7"
       app:layout_constraintTop_toBottomOf="@+id/android_TextView5"
       app:layout_constraintBottom_toTopOf="@+id/android_TextView6"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:hint="设置回复通知消息标题">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/idk_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

<!-- 配置文件对应 imgPath -->
    <TextView
        android:id="@+id/android_TextView6"
        android:text="点击选择消息通知头像"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/android_TextView5"
       app:layout_constraintBottom_toTopOf="@+id/idk_Button" />

    <com.google.android.material.button.MaterialButton
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="7dp"
          android:layout_marginBottom="3dp"
          android:text="保存通知消息配置"
          android:textSize="23sp"
          android:padding="11dp"
          app:layout_constraintTop_toBottomOf="@+id/android_TextView6"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:id="@+id/idk_Button" />

  <com.google.android.material.textfield.TextInputLayout
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginBottom="83dp"
       android:layout_marginStart="7dp"
       android:layout_marginEnd="7dp"
       app:layout_constraintEnd_toStartOf="@id/android_Button"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:hint="请输入需要发送到通知的消息内容[仅供测试]">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/google_TextInputEditText"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.google.android.material.textfield.TextInputLayout>

     <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="83dp"
          android:layout_marginEnd="7dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:id="@+id/android_Button"
          android:src="@drawable/ic_xyn_telegram" />
        
     
</androidx.constraintlayout.widget.ConstraintLayout>