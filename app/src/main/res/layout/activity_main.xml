<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background"
    android:fitsSystemWindows="true">
    
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_background"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:elevation="4dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        
    <include
        android:id="@+id/app_info_main"
        layout="@layout/app_info_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/main_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        
     <com.google.android.material.button.MaterialButton
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="7dp"
          android:layout_marginBottom="3dp"
          android:text="进入 XiaoKitty"
          android:textSize="23sp"
          android:padding="11dp"
          android:backgroundTint="@color/main_button"
          app:layout_constraintTop_toBottomOf="@+id/app_info_main"
          app:layout_constraintBottom_toTopOf="@+id/my_TextView"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:textColor="@color/main_text"
          android:id="@+id/main_Button" />
          
     <TextView
        android:id="@+id/my_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:textSize="13sp"
        android:textColor="@color/main_hint"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/main_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>